<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='css/main.css' />
    <link rel='stylesheet' href='css/fonts.css' />
    <script
      src='https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js'
      defer
    ></script>
    <script src='js/main.js' defer></script>

    {{#if (areEqual @exphbs.view 'home/index.view')}}
      <script src='js/home.js' defer></script>
      <title>{{title}}</title>
    {{/if}}

    {{#if (areEqual @exphbs.view 'card/index.view')}}
      <script src='https://momentjs.com/downloads/moment.js' defer></script>
      <script src='js/card.js' defer></script>
      <title>Card View - {{title}}</title>
    {{/if}}

  </head>
  <body>
    {{> loading-view.view}}
    <div class="main-view">
      <div class='container'>
        <h1 class='title'>{{title}}</h1>
        <p class='subtitle'>

          {{#if (areEqual @exphbs.view 'home/index.view')}}
            Share your music taste with the world.
          {{/if}}

          {{#if (areEqual @exphbs.view 'card/index.view')}}
            Card View
          {{/if}}

        </p>
        <div class='content'>
          {{{body}}}
        </div>
      </div>
    </div>
    <footer class='footer'>
      <a href='https://www.spotify.com' target='_blank' rel='noreferrer'>
        <img
          class='spotify-logo'
          src='images/Spotify_Logo_RGB_White.png'
          alt='Spotify Link'
          height='30'
        />
        <img
          class='spotify-icon'
          src='images/Spotify_Icon_RGB_White.png'
          alt='Spotify Link'
          height='30'
        />
      </a>
      <a
        class='repo-link'
        href='https://github.com/magic-ike/spotify-data-card'
        target='_blank'
        rel='noreferrer'
      >Made with ðŸ’š and Node</a>
    </footer>
  </body>
</html>